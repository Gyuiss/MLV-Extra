
{% extends 'base.html.twig' %}

{% block title %} {{ad.title}} {% endblock %}

{% block body %}

<div class="ad-title" style="background-image: url({{ad.coverImage}})">
    <div class="container mt-5 mb-5">
        <h1> {{ad.title}} </h1>
        <p>{{ad.introduction}}</p>
        <p class="h2"> <strong> Extra du {{ad.startAdDate|date('d/m/Y')}} au {{ad.endAdDate|date('d/m/Y')}}</strong>, soit <strong>{{ad.hoursPerDay}} heures / jour</strong></p>
        <a href="{{ path('booking_create', {'slug': ad.slug})}}" class="btn btn-primary">Réserver!</a>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-primary"> Modifier</a>
        <a href="{{ path('ads_delete', {'slug': ad.slug}) }}" class="btn btn-danger" onclick="return confirm(`Êtes vous sur de vouloir supprimer l'Xtra : {{ ad.title }} ?`)"> Supprimer!</a>
        {% endif %}
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">

            {{ad.content | raw}}
            {# ------------- CAROUSEL ------------ #}
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for image in ad.images %}
                    <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
                    {% endfor %}
                </ol>   
                <div class="carousel-inner">
                    {% for image in ad.images %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img class="d-block w-100" src="{{ image.url }}" alt="First slide">
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            {# ------------- END CAROUSEL ------------ #}
            <hr>
            {% if ad.comments | length > 0 %}
                <h2 class="mb-3">Commentaires des salariés :</h2>
                {# comment alert #}
                <div class="alert alert-info">
                    <h4 class="alert-heading text-center">
                        <div class="row align-items-center">
                            <div class="col">
                                Note globale pour cette mission :
                            </div>
                            <div class="col">
                                {% include 'shared/rating.html.twig' with {'rating': ad.ratingAvg} %}
                                <br>
                                <small>Moyenne calculée sur {{ad.comments | length}} avis ! </small>
                            </div>
                        </div>
                    </h4>
                </div>

                {% for comment in ad.comments %}
                    <div class="bg-light rounded mb-3 py-3 px-3">
                        <strong>{{ comment.author.firstName}} {{ comment.author.lastName}}</strong> a dit :
                        <blockquote>
                            {{comment.content}}
                        </blockquote>
                        <strong>Note donnée :</strong> 
                        {% include 'shared/rating.html.twig' with {'rating': comment.rating} %}
                    </div>
                {% endfor %}
            {% else %}
                <h2>Cette Xtra n'a pas encore reçu de commentaire!</h2>
            {% endif %}
        </div>
        <div class="col">
            <div class="row">
                <div class="col-4 mb-3">
                   <a href="{{ path('user_show', {'slug': ad.author.slug}) }}"> <img src="{{ ad.author.picture }}" class="avatar avatar-medium" alt"Photo de profil {{ ad.author.firstName }} {{ ad.author.lastName }}"> </a>
                </div>
                <div class="col">
                    <a href="{{ path('user_show', {'slug': ad.author.slug}) }}"><h3> {{ ad.author.firstName }} {{ ad.author.lastName }} </h3></a>
                    <span class="badge badge-primary"> {{ ad.author.ads | length }} annonces</span>
                </div>
            </div>
            <p> Tel : {{ ad.author.tel }}</p>
             {{ ad.author.text | raw }}
        </div>
    </div>
</div>




 
{% endblock %}