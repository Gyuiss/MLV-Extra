

{% extends 'base.html.twig' %}

   
        
{% block title %}Bienvenue!{% endblock %}  
{% block stylesheets %}{% endblock %}

    
{% block body %} 
        <div class="container">
                <div class="jumbotron mt-3">
                        <h1 class="display-3">Bienvenu sur MLV Xtra!</h1>
                        <p class="lead">description du site (home twig) ex: nous mettns en relation blablabla</p>
                        <hr class="my-4">
                        <p>deuxieme descriptif (home twig)</p>
                       {# <p class="lead">
                                <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
                        </p> #}
                </div>  
        <h2 class="h1 mb-3 mt-3"> Nos magasins star</h2>

        {# FIRST BLOCK OF ADS STAR CARDS #}
                <div class="row">
                        {% for data in ads %}
                                {% include 'ad/refactoredAdsList.html.twig' with {'ad': data.annonce} %}
                        {% endfor %} 
                </div>

        <h2 class="h1 mt-3 mb-3"> Nos employés star</h2>

        {# SECOND BLOCK OF EMPLOYEE STAR CARDS #}
                <div class="row">
                {% for worker in bestWorker %}
                        <div class="col">
                                <div class="card border-secondary mb-3">
                                        <div class="card-body">
                                                <h4 class="card-title"> {{worker.firstName}} {{worker.lastName}} </h4>
                                                <hr>
                                                <div class="card-text">
                                                        <img src="{{worker.picture}}" alt="Avatar de salarié" class="float-left mr-3">
                                                        <h5>A effectué <span class="badge-dark"><strong> {{worker.total}}</strong></span> Heures sup ! <i class="fas fa-thumbs-up"></i> </h5>
                                                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Accusantium, assumenda.</p>
                                                        {% if app.user %}
                                                                <a href="{{ path('user_show', {'slug': worker.slug}) }}" class="btn btn-success float-right">En savoir plus</a>
                                                        {% else %}
                                                                <a href="{{ path('account_login') }}" class="btn btn-success float-right">En savoir plus</a>
                                                        {% endif %}
                                                </div>
                                        </div>
                                </div>
                        </div>
                {% endfor %}
                </div>


        </div>

{% endblock %}
        {% block javascripts %}{% endblock %}
    
